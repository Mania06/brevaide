<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/globalMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/globalCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	/>
    <TextView
        android:id="@+id/frenchMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/frenchCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	/>
    <TextView
        android:id="@+id/mathsMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mathsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	/>

    <TextView
        android:id="@+id/historyMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/historyCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	/>
    

</LinearLayout>